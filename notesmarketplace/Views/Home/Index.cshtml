</head>

<body>

    <!-- Preloader -->
    <div id="preloader">
        <div id="status"></div>
    </div>

    <!-- Header -->
    <header id="hm-nav">
        <nav class="navbar navbar-fixed-top">
            <div class="container-fluid">
                <div class="site-nav-wrapper">
                    <div class="navbar-header">

                        <!-- Mobile Menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <!-- logo -->
                        <a href="~/Views/Home/" class="navbar-brand">
                            <img src="~/Content/img/home/top-logo.png" alt="logo" id="logo-img">
                        </a>
                    </div>

                    <!-- Main Menu -->
                    <div class="container" id="main-menu">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav pull-right">
                                <li>@Html.ActionLink("Search Notes", "SearchNotes", "pages", null, new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Sell Your Notes", "AddNotes", "pages", null, new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("FAQ", "Faq", "pages", null, new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Contact Us", "ContactUs", "pages", null, new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("LOGIN", "LogIn", "pages", null, new { @class = "smooth-scroll", @id= "navigation-login-btn" })</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <span id="mobile-nav-close-btn">&times;</span>

                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li>@Html.ActionLink("Search Notes", "SearchNotes", "pages")</li>
                                <li>@Html.ActionLink("Sell Your Notes", "AddNotes", "pages")</li>
                                <li>@Html.ActionLink("FAQ", "Faq", "pages")</li>
                                <li>@Html.ActionLink("Contact Us", "ContactUs", "pages")</li>
                                <li>@Html.ActionLink("LOGIN", "LogIn", "pages")</li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->
    <!-- Home -->
    <section id="home">

        <!-- Background Image -->
        <div id="home-bg-img">
            <img src="~/Content/img/home/banner-with-overlay.jpg" alt="Home Page">
        </div>

        <!-- Home Content -->
        <div id="home-content">
            <div id="home-content-inner" class="text-left">
                <div id="home-heading">
                    <h1 id="home-heading-1">Download Free/Paid Notes</h1><br>
                    <h1 id="home-heading-2">or Sale your Book</h1>
                </div>
                <div id="home-text">
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eaque itaque <br> voluptate suscipit atque nesciunt dicta modi.</p>
                </div>
                <div id="home-btn">
                    <a class="btn btn-general btn-home" href="#" title="Learn More" role="button">Learn More</a>
                </div>
            </div>
        </div>
    </section>
    <!-- Home Ends -->
    <!-- About -->
    <section id="about">
        <!-- About-01 -->
        <div id="about-01">
            <div class="content-box-md">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <!-- About Left Side -->
