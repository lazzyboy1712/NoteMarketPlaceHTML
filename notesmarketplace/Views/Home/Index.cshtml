                </div>
            </div>
        </div>
        <!-- About-01 Ends -->
        <!-- About-02 -->
        <div id="about-02">
            <div class="content-box-md">
                <div class="container">
                    <h2 class="horizontal-heading text-center">How It Works</h2>
                    <div class="row text-center">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <div class="work-item text-center">
                                <div class="images-dwnld-sell">
                                    <img src="~/Content/img/home/download.png" alt="Download" class="work-img">
                                </div>
                                <h4>Download Free/Paid Notes</h4>
                                <p>Get Material for your<br>Cource Etc</p>
                                <div id="download-btn">
                                    <form action="../pages/SearchNotes">
                                        <button class="btn btn-general btn-purple" type="submit" href="MyDownload">Download</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <div class="work-item text-center">
                                <div class="images-dwnld-sell">
                                    <img src="~/Content/img/home/seller.png" alt="seller" class="work-img">
                                </div>
                                <h4>Seller</h4>
                                <p>Upload and Download Cource<br>and Materials Etc</p>

                                <div id="seller-btn">
                                    <form action="../pages/Dashboard">
                                        <button class="btn btn-general btn-purple" type="submit">SELL BOOK</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- About-02 Ends -->

    </section>
