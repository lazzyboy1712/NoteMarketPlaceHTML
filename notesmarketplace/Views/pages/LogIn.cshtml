@model notesmarketplace.User
@{ 
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/RegistrationPages.cshtml";
}


<!-- Login  -->
<section id="login">

    <!-- Background Image -->
    <div id="common-bg-img">
        <img src="~/Content/img/pre-login/banner-with-overlay.jpg" alt="Login Page">
    </div>

    <!-- Logo -->
    <div class="logo-login">
        <!-- logo -->
        <a href="../home/">
            <img src="~/Content/img/home/top-logo.png" alt="logo" id="logo-img">
        </a>
    </div>

    <!-- Login Form -->
    <div class="container loginform">
        <form method="post">
            <div id="login-heading" class="text-center">
                <h4>Login</h4>
                <p>Enter your email address and password to login</p>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label for="email-id-login">Email</label>
                        @*@Html.TextAreaFor(m => m.EmailID, new { @class= "form-control", @id= "email-id-login", @placeholder= "Enter your email address" });*@
                        @if (ViewBag.IsValid == "true")
                        {
                            <input name="EmailID" type="email" class="form-control" id="email-id-login" placeholder="Enter your email address" required>
                        }
                        else 
                        {
                            <input name="EmailID" type="email" class="form-control" id="email-id-login" placeholder="Enter your email address" value="@Model.EmailID" required>
                        }
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="row" id="pass">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <label for="password-field-login">Password</label>
                        </div>
                        <div class="col-md-6 text-right col-sm-6 col-xs-6">@Html.ActionLink("Forgot Password?", "ForgotPassword", "pages", null, new { @id = "forgot-password" })</div>
                    </div>
                    <div class="form-group">
                        @if (ViewBag.IsValid == "true")
                        {
                            @Html.PasswordFor(m => m.Password, new { @id = "password-field-login", @class = "form-control", @placeholder = "Enter your password" })
                            @*<input id="password-field-login" type="password" class="form-control" name="Password" placeholder="Enter your password" required>*@
                        }
                        else
                        {
                            @Html.PasswordFor(m => m.Password, new { @value = Model.Password, @id = "password-field-login", @class = "form-control", @placeholder = "Enter your password" })
                        }
                        <span toggle="#password-field-login" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        <div class="invalid-password" id="error-msg">
                            The Password that you're entered is incorrect
                        </div>
                    </div>
                </div>
                <div class="col-md-1 col-sm-1 col-xs-1">
                    @*<input name="RememberMe" type="checkbox" class="form-check-input" id="remember-me">*@
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input exampleCheck" })
                </div>
                <div class="col-md-11 col-sm-11 col-xs-11">
                    <label class="form-check-label" for="remember-me">
                        Remember Me
                    </label>
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-primary btn-lg btn-block btn-login" type="submit">LOGIN</button>
            </div>
            <div class="col-md-12 text-center col-sm-12 col-xs-12">
                <p id="sign-up-text">Don't have an account?@Html.ActionLink("SignUp", "SignUp", "pages")</p>
            </div>
        </form>
    </div>
</section>
<!-- Login Form Ends-->
