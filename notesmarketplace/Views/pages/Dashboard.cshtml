@model IEnumerable<notesmarketplace.SellerNote>
@{
    ViewBag.Title = "Dashboard";
    if (Session["email"] != null)
    {
        Layout = "~/Views/Shared/RegisterUser.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/NonRegisterUser.cshtml";
    }
}


<!-- dashboard -->
<section id="dashboard">
    <div class="content-box-md">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <h2>Dashboard</h2>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                    <div id="addnote-btn">
                        @*<a class="btn btn-general btn-purple" title="Add Notes" role="button">Add Notes</a>*@
                        @Html.ActionLink("Add Notes", "AddNotes", "pages", null, new { @class = "btn btn-general btn-purple", @role = "button" })
                    </div>
                </div>
                <!-- Dashboard left-->
                <div class="col-md-7 col-sm-7 col-xs-12">
                    <div id="dashboard-left">
                        <div class="row">
                            <div class="col-md-3 col-sm-3 col-xs-4">
                                <img src="~/Content/img/Dashboard/earning1.jpg" alt="My Earning">
                                <h5 class="text-center">My Earning</h5>
                            </div>
                            <p class="vertical-border"></p>
                            <div class="col-md-4 col-sm-4 col-xs-4 text-center">
                                <h4>100</h4>
                                <p>Number of Notes Sold</p>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4 text-center">
                                <h4>$10,00,000</h4>
                                <p>Money Earned</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Dashboard right-->
                <div class="col-md-5 col-sm-5 col-xs-12">
                    <div id="dashboard-right" class="text-center">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <h4>38</h4>
                                <p>My downloads</p>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <h4>12</h4>
                                <p>My Rejected Notes</p>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <h4>102</h4>
                                <p>Buyer Requests</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Dashboard Ends -->
<!-- In Process Notes -->
<section id="process-note">
    <div class="content-box-md">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-5">
                    <h6>In Process Notes</h6>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4">
                    <input type="search" class="form-control" id="search-process-note" placeholder="Search">
                    <span class="fa fa-fw fa-search search-icon"></span>
                </div>
                <div class="col-md-2 col-sm-2 col-xs-3">
                    <div id="process-search-btn" class="text-right">
                        <a class="btn btn-general btn-purple" href="#" title="Search" role="button">Search</a>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12 table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ADDED DATE</th>
                                <th>TITLE</th>
                                <th>CATOGORY</th>
                                <th>STATUS</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(ModelItem => item.CreatedDate)</td>
                                <td>@Html.DisplayFor(ModelItem => item.Title)</td>
                                <td>@Html.DisplayFor(ModelItem => item.NoteCategory.Name)</td>
                                <td>@Html.DisplayFor(ModelItem => item.ReferenceData.DataValue)</td>
                                @if (item.Status == 11)
                                {
                                    <td>
                                       <img src="~/Content/img/Dashboard/edit.png" alt="edit" onclick="@("window.location.href='" + @Url.Action("AddNotes", "pages", new { id = item.ID})+ "'");">
                                       <i class="fa fa-trash"></i>
                                    </td>
                                }
                                else
                                {
                                    <td class="view"><img src="~/Content/img/Dashboard/eye.png" alt="view"></td>
                                }
                            </tr>
                            }
                            </tbody>
                    </table>
                    <nav>
                        <div class="container text-center">
                            <div class="row justify-content-center">
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true"><i class="fa fa-angle-left"></i></a>
                                    </li>
                                    <li class="page-item selected"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true"><i class="fa fa-angle-right"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- In Process Notes Ends -->
