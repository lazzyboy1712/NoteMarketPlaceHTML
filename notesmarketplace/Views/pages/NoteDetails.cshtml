@model notesmarketplace.SellerNote

@{
    ViewBag.Title = "Notes Details";
    if (Session["email"] != null)
    {
        Layout = "~/Views/Shared/RegisterUser.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/NonRegisterUser.cshtml";
    }
}

<!-- Note Details -->
<section id="note-detail">
    <div class="content-box-md">
        <div class="container">
            <h3>Notes Details</h3>
            <div class="row">
                <div class="col-md-7 col-sm-7 col-xs-12">
                    <!-- Left side Notes -->
                    <div class="left-side-notes">
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-5">
                                <img src="~/Notes/DisplayPicture/@Html.DisplayFor(Model=>Model.DisplayPicture)" alt="Books">
                            </div>
                            <div class="col-md-7 col-sm-7 col-xs-7">
                                <h2>@Html.DisplayFor(Model=>Model.Title)</h2>
                                <p>@Html.DisplayFor(Model => Model.NoteCategory.Name)</p>

                                <p>@Html.DisplayFor(Model => Model.Description)</p>

                                <div id="download-price-btn">
                                    @if (Session["email"] != null)
                                    {
                                        <button class="btn btn-general btn-purple" type="submit" data-toggle="modal" data-target="#exampleModal">Download / $@Html.DisplayFor(Model => Model.SellingPrice)</button>
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Download / $"+ Html.DisplayFor(Model => Model.SellingPrice), "LogIn", "pages", null, new { @class = "btn btn-general btn-purple" })
                                        @*<button class="btn btn-general btn-purple" type="submit">Download / $@Html.DisplayFor(Model => Model.SellingPrice)</button>*@
                                    }
                                </div>
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="model-data">
                                                <div class="row">
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <div class="model-head text-center">
                                                            <img class="img-fluid" src="~/Content/img/Notes Details/SUCCESS.png">
                                                            <h2>Thank your for purchasing!</h2>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <div class="model-content">
                                                            <p><b>Dear @Session["fname"],</b></p>
                                                            <p>As this is paid notes-you need to pay to seller @Html.DisplayFor(Model => Model.User.FirstName) @Html.DisplayFor(Model => Model.User.LastName) offline.We will send him an email that you want to download this note.He may contact you further for payment process completion.</p>
                                                            <p>In Case, you have urgency,<br>Please contact us on +9195538863848.</p>
                                                            <p>Once he recevies the payment and acknowledge us-Seleted notes you can see over my downloads tab for download.</p>
                                                            <p>Have a good day.</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Right side Notes -->
                <div class="col-md-5 col-sm-5 col-xs-12">
                    <div class="right-side-notes">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p>Institution:</p>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p class="text-right"><span>@Html.DisplayFor(Model => Model.UniversityName)</span></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p>Country:</p>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p class="text-right"><span>@Html.DisplayFor(Model => Model.Country1.Name)</span></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p>Course Name:</p>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p class="text-right"><span>@Html.DisplayFor(Model => Model.Course)</span></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p>Cource Code:</p>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p class="text-right"><span>@Html.DisplayFor(Model => Model.CourseCode)</span></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p>Professor:</p>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p class="text-right"><span>@Html.DisplayFor(Model => Model.Professor)</span></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p>Number of Pages:</p>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p class="text-right"><span>@Html.DisplayFor(Model => Model.NumberOfPage)</span></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p>Approved Date:</p>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p class="text-right"><span>November 25 2020</span></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <p>Rating:</p>
                            </div>
                            <div class="col-md-6 text-right col-sm-6 col-xs-6">
                                <div class="rate">
                                    <input type="radio" id="star5" name="rate" value="5" />
                                    <label for="star5" title="text">5 stars</label>
                                    <input type="radio" id="star4" name="rate" value="4" />
                                    <label for="star4" title="text">4 stars</label>
                                    <input type="radio" id="star3" name="rate" value="3" />
                                    <label for="star3" title="text">3 stars</label>
                                    <input type="radio" id="star2" name="rate" value="2" />
                                    <label for="star2" title="text">2 stars</label>
                                    <input type="radio" id="star1" name="rate" value="1" />
                                    <label for="star1" title="text">1 star</label>
                                </div>
                                <p><span>100 reviews</span></p>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <p><span id="inappropriate">5 users marked this note as inappropriate</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p id="border"></p>
        </div>
    </div>
</section>
<!-- Notes Details Ends -->
