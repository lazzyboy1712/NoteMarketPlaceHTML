@model notesmarketplace.User

@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/RegistrationPages.cshtml";
}


<!-- Sign Up  -->
<section id="signup">

    <!-- Background Image -->
    <div id="common-bg-img">
        <img src="~/Content/img/pre-login/banner-with-overlay.jpg" alt="Login Page">
    </div>

    <!-- Logo -->
    <div class="logo-signup">
        <!-- logo -->
        <a href="../home/">
            <img src="~/Content/img/home/top-logo.png" alt="logo" id="logo-img">
        </a>
    </div>

    <!-- Sign Up Form -->
    <div id="signupform" class="container">
        <form method="post">
            <div id="signup-heading" class="text-center">
                <h2>Create an Account</h2>
                <p>Enter your details to signup</p>
            </div>
            <div class="created-text text-center valid-information">
                <p><i class="fa fa-check-circle"></i> Your account has been successfully created.</p>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label for="firstname-signup">First Name *</label>
                        <input name="FirstName" id="firstname-signup" type="text" class="form-control" placeholder="Enter your first name" required>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label for="lastname-signup">Last Name *</label>
                        <input name="LastName" id="lastname-signup" type="text" class="form-control" placeholder="Enter your last name" required>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label for="email-id-signup">Email *</label>
                        <input name="EmailID" id="email-id-signup" type="email" class="form-control" placeholder="Enter your email address" required>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="row" id="pass">
                        <div class="col-md-12">
                            <label for="password-field-signup">Password *</label>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @id = "password-field-signup", @class = "form-control", @placeholder = "Enter your password" })
                        @*<input name="Password" id="password-field-signup" type="password" class="form-control" placeholder="Enter your password" required>*@
                        <span toggle="#password-field-signup" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="row" id="pass">
                        <div class="col-md-12 col-sm-12">
                            <label for="re-password-field-signup">Confirm Password *</label>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "re-password-field-signup", @class = "form-control", @placeholder = "Enter your password" })
                        @*<input name="ConfirmPassword" id="re-password-field-signup" type="password" class="form-control" placeholder="Re-enter your password" required>*@
                        <span toggle="#re-password-field-signup" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    </div>

                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-primary btn-lg btn-block btn-signup" type="submit">SIGN UP</button>
            </div>
            <div class="col-md-12 text-center col-sm-12 col-xs-12">
                <p id="log-in-text">Already have an account? @Html.ActionLink("Login", "LogIn", "pages")</p>
            </div>
        </form>
    </div>
</section>
<!-- Sign Up Form Ends-->